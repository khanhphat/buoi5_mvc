@model IEnumerable<buoi5_mvc.Models.ProductModels>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table border="1" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Price.ToString("#,##0") đ
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                @item.Empty
            </td>
            <td>
                <a asp-action="Edit" asp-route-mahh="@item.Id">Sửa</a>
                <a asp-action="Detail" asp-route-id="@item.Id">Chi tiết</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
</body>
</html>
